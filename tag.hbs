{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header post-header {{#if image}}cover{{/if}}">
    
    {{#tag}}
        {{#if image}}
            <img data-aload="{{image}}" alt="">
            <div class="blurred"></div>
        {{/if}}
    {{/tag}}

    {{!-- Main cover --}}
    <div class="center-content">
        <h2 class="page-description tag-title">{{ tag.name }} Themes</h2>
        <h4 class="post-type">Find the perfect theme for your next project.</h4>
    </div>

    {{!-- Sharing --}}
    <section class="sharing">
        <h2>Share it! with your friends</h2>
        <a class="ghost-btn" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
            onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            <span class="">Twitter</span>
        </a>
        <a class="ghost-btn" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
            onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
            <span class="">Facebook</span>
        </a>
        <a class="ghost-btn" href="https://plus.google.com/share?url={{url absolute="true"}}"
           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
            <span class="">Google+</span>
        </a>
    </section>
</header>

{{!-- Navigation --}}
{{> "navigation"}} 

{{! The main content area on the homepage }}
<main class="main-content post-content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{!-- {{> "loop"}} --}}
    {{#foreach posts}}
        <div class="uk-width-1-1 gt-main-section lt-gt">
            <div class="wrapper-1240">
                <section class="latest-gt-themes uk-grid">
                    <section class="uk-width-1-3 lt-post-item">
                        <article class="article" data-uk-scrollspy="{cls:'uk-animation-scale-up', repeat: true}">
                            
                            <section class="image-section">
                                {{#if image}}
                                    <a href="{{ url }}"><img src="{{ image }}" alt=""></a> 
                                {{/if}}
                            </section>

                            <div class="lt-content">
                                <h2><a href="{{ url }}">{{ title }}</a></h2>
                                <p class="description">
                                    {{excerpt words="15"}}
                                </p>

                                {{!-- Set type of theme --}}
                                <aside class="type">
                                    {{#has tag="free"}}<strong><a href="{{ @blog.url }}/tag/free/">Free</a></strong>{{/has}}
                                    {{#has tag="premium"}}<strong><a href="{{ @blog.url }}/tag/premium/">Premium</a></strong>{{/has}}
                                </aside>

                                <!-- This is the container enabling the JavaScript -->
                                <div class="uk-button-dropdown" data-uk-dropdown="{mode:'click'}">

                                    <!-- This is the button toggling the dropdown -->
                                    <button class="uk-button"><i class="uk-icon-ellipsis-v"></i></button>

                                    <!-- This is the dropdown -->
                                    <div class="uk-dropdown uk-dropdown-small uk-dropdown-flip">
                                        <ul class="uk-nav uk-nav-dropdown">
                                            <li><a href="">Preview</a></li>
                                            <li><a href="">Download</a></li>
                                            <li><a href="">Purchase</a></li>
                                        </ul>
                                    </div>

                                </div>
                            </div>

                            <div class="clearfix"></div>
                        </article>

                    </section>

                </section>
            </div>
        </div>

    {{/foreach}}
    
    {{!-- Footer --}}
    {{> "footer"}} 
</main>